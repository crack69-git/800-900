#include<bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        int n,j=0,cnt=0,k;
        cin>>n;
        k=n;
        vector<int>arr(n),brr(n);
        for(int i=0;i<n;i++){
            cin>>arr[i];

            if(arr[i]==0){
                cnt++;
            }
            if(arr[i]==1){
                brr[j++]=cnt;
                cnt=0;
            }
            else if(i==k-1){
                brr[j++]=cnt;
            }

        }

        auto maxi=max_element(brr.begin(),brr.end());
        cout<<*maxi<<endl;
    }
return 0;
}
