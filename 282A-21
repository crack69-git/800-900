#include<bits/stdc++.h>
using namespace std;
int main(){
    int t,x=0;
    cin>>t;
    while(t>=0){
        string str;
        getline(cin,str);
        if(str=="X++"){
            x++;
        }
        else if(str=="++X"){
            ++x;
        }
        else if(str=="X--"){
            x--;
        }
        else if(str=="--X"){
            --x;
        }
        t--;
    }
    cout<<x;
    return 0;
}
